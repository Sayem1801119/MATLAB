clc;
clear all;
syms x
% Give the function
 
f(x)=input('Function=');
% bisection method gives at least one root of the given function in an
% predefined interval
p=input('Lower Limit, p=');
q=input('Upper Limit, q=');
m=input('Highest degree, m=');
e=input('Acceptable error, e=');
if m==2
    g=input('Interval Region: 0 for positive and 1 for negative, g=');
    for(i=p:q)
     if g==0 
     if f(i)<0
        y=i;
     end 
     if f(i)>0
       w=i;
       break
     end
     end
     if g==1 
     if f(i)>0
       w=i;
     end
     if f(i)<0
        y=i;
        break
     end 
     end
    end
end
if m==3
   for(i=p:q)
     if f(i)<0
        y=i; 
     end
     if f(i)>0
       w=i;
       break
     end
    end
end
% The root between the interval lies between the two marginal points.
% These are-
Marginal_Point_of_negative_output=y
Marginal_Point_of_positive_output=w
% If the root is a integer number then r is one of the root of the function
% in the interval
for(j=2:1000)
    r=(y+w)/2;
if f(w)*f(r)<0
    y=r;
else
    w=r;
end
if f(y)*f(r)<0
    w=r;
else
    y=r;
end
rcom(1)=0;
rcom(j)=r;
if abs((rcom(j)-rcom(j-1))/rcom(j))<e
    break
end
end
Root=['Root in the given interval: ', num2str(r), '']
